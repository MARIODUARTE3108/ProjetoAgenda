@model ProjetoAgenda.Models.TelefoneCadastroModel
@{
    ViewData["Title"] = "Cadastro";
    Layout = "~/Views/Templates/Layout.cshtml";
}

<h3>Cadastro de Telefone</h3>
<p>
    Preencha o formulário para incluir um Telefone.
</p>
<hr />
<br />
@if (TempData["Mensagem"] != null)
{
    <div class="alert alert-secondary mb-2">
        <strong>@TempData["Mensagem"]</strong>
    </div>
}

@using (Html.BeginForm())
{
    <label>Número do Telefone:</label>
    @Html.TextBoxFor(model => model.Numero, new { @class = "form-control" })
    <div class="text-danger">
        @Html.ValidationMessageFor(model => model.Numero)
    </div>
    <br />
    <label>Informe o Id do contato:</label>
    @Html.TextBoxFor(model => model.IdContato, new {@class = "form-control" })
    <br />

    <input type="submit" value="Realizar Cadastro"class="btn btn-success" />
 }
