@model ProjetoAgenda.Models.ContatoEdicaoModel
@{
    ViewData["Title"] = "Edicao";
    Layout = "~/Views/Templates/Layout.cshtml";
}

<h3>Atualização de Contato</h3>
<p>
    Utilize o formulário para alterar o contato.
</p>
<hr />

@if (TempData["Mensagem"] != null)
{
    <div class="alert alert-secondary mb-2">
        <strong>@TempData["Mensagem"]</strong>
    </div>
}

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.IdContato)

        <label> Nome do Contato: </label>
        @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
       <div class="text-danger">
           @Html.ValidationMessageFor(model => model.Nome)
       </div>
       <br/>

       <input type = "submit" value = "Salvar Alterações"class="btn btn-primary"/>

}